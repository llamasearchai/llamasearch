# Research Code Automation Tool Environment Variables

# OpenAI API Key (required for AI text processing)
OPENAI_API_KEY=your_openai_api_key

# GitHub Token (optional, for higher GitHub API rate limits)
GITHUB_TOKEN=

# LlamaSearch API URL and configuration
LLAMASEARCH_API_URL=http://localhost:8000/api
LLAMASEARCH_DATA_DIR=./data
LLAMASEARCH_CACHE_DIR=./cache
DOWNLOAD_DIR=./downloads

# Rate limiting for web scraping (seconds between requests)
RATE_LIMIT=1.0

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Database URL (default: SQLite)
DATABASE_URL=sqlite:///./research_code_automation.db

# Optional: Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# Optional: MLX Settings
USE_MLX=true
MLX_MODEL_PATH=./models/mlx

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ResearchCodeAutomation/1.0

# System Settings
USER_AGENT=ResearchCodeAutomation Bot v1.0
MAX_THREADS=4 